// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  created_at    DateTime @default(now())
  email         String   @unique
  name          String?
  password_hash String

  @@map("users")
}

model CheckIn {
  id           String    @id @default(uuid())
  created_at   DateTime  @default(now())
  validated_at DateTime?

  @@map("check_ins")
}

model Gym {
  id          String  @id @default(uuid())
  description String?
  latitude    Decimal
  longitude   Decimal
  phone       String?
  title       String

  @@map("gyms")
}
